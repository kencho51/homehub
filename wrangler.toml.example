# Cloudflare Wrangler Configuration
# Copy this file to wrangler.toml and update with your values

name = "family-hub"
compatibility_date = "2024-01-01"

# Cloudflare Pages configuration
pages_build_output_dir = ".output/public"

# D1 Database binding
[[d1_databases]]
binding = "homehubdb"
database_name = "homehub-db"
database_id = "your-database-id-here"  # Replace with your actual D1 database ID

# For production deployment (optional - managed by Wrangler)
CLOUDFLARE_ACCOUNT_ID=""
CLOUDFLARE_DATABASE_ID=""
CLOUDFLARE_D1_TOKEN=""